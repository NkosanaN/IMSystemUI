@model IMSystemUI.Domain.ItemEmployeeAssignment

@{
    ViewData["Title"] = "Edit Item Transfer";
    Layout = "_LayoutDashboard";
}
<h1>@ViewData["Title"]</h1>
<hr/>
<div class="row">
    <div class="container bg-opacity-100 shadow-sm mt-3">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row  mb-3">
                <div class="form-group col-6">
                    <select asp-for="ItemId" class="js-example-basic-single js-states form-control" asp-items="@ViewBag.itemList" tabindex="-1">
                        <option disabled selected>-Select Item-</option>
                    </select>
                    <span asp-validation-for="ItemId" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <select asp-for="ItemId" class="js-example-basic-single js-states form-control" asp-items="@ViewBag.issuerList" tabindex="-1">
                    <option disabled selected>-Select Item-</option>
                    </select>
                    <span asp-validation-for="ItemId" class="text-danger"></span>
                </div>
            </div>

            <div class="row  mb-3">
                <div class="form-group col-6">
                    <label asp-for="DateTaken" class="control-label"></label>
                    <input asp-for="DateTaken" class="form-control" />
                    <span asp-validation-for="DateTaken" class="text-danger"></span>
                </div>

                <div class="form-group col-6">
                    <label asp-for="DateReturned" class="control-label"></label>
                    <input asp-for="DateReturned" class="form-control" />
                    <span asp-validation-for="DateReturned" class="text-danger"></span>
                </div>
            </div>


            <div class="row  mb-4">
                <div class="form-group col-6">
                    <label asp-for="ReturnedCondition" class="control-label"></label>
                    <textarea style="height: 100%; width: 100%" rows="5" class="form-control" asp-for="ReturnedCondition" id="validationTextarea" placeholder="Please provide Return Condition" required></textarea>

                    <span asp-validation-for="ReturnedCondition" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="ResonForNotReturn" class="control-label"></label>
                    <textarea style="height: 100%; width: 100%" rows="5" class="form-control" asp-for="ResonForNotReturn" id="validationTextarea" placeholder="Please provide Reason For Not Returning Item" required></textarea>
                    <span asp-validation-for="ResonForNotReturn" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group form-check mb-3">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsReturned" /> @Html.DisplayNameFor(model => model.IsReturned)
                </label>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Save" class="btn btn-light shadow-sm m-0" />&nbsp;
                <a asp-action="Index" class="btn btn-outline-secondary shadow-sm">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
